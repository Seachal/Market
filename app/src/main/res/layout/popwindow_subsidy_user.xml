<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@null">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="@dimen/x775"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x35"
        >
        <LinearLayout
            android:layout_width="@dimen/x740"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y35"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y268"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x25"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/shape_subsidy_main_user"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >
                    <com.dajukeji.hslz.view.CircleImageView
                        android:id="@+id/main_subsidy_user"
                        android:layout_width="@dimen/x140"
                        android:layout_height="@dimen/y140"
                        android:src="@drawable/head_image"
                        />
                    <TextView
                        android:id="@+id/tv_main_subsidy_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y15"
                        android:textColor="@color/goods_info_tip"
                        android:text="某某"
                        />
                </LinearLayout>
                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tv_subsidy_main_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-10-25 键单"
                        android:textColor="@color/subsidy_user_time"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/tv_subsidy_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y25"
                        android:gravity="right"
                        android:textColor="@color/subsidy_user_time"
                        android:text="共5人"
                        android:textSize="13sp"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shape_subsidy_help_user"
                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_subsidy_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_marginRight="@dimen/x25"
                    >
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/ll_popwindow_close"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/y70"
            android:src="@drawable/shut_down"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
</LinearLayout>