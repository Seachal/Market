<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff">

        <ImageView
            android:id="@+id/item_free_shopping_url"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y534"
            android:scaleType="fitXY"
            android:src="@drawable/goods" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_free_shopping_url"
            android:layout_alignLeft="@id/item_free_shopping_url"
            android:layout_alignRight="@id/item_free_shopping_url"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x30"
            android:paddingTop="@dimen/y10"
            android:paddingRight="@dimen/x30">

            <TextView
                android:id="@+id/item_free_shopping_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="2"
                android:text="大卫厨具多功能卫厨具多功能卫厨具多功能"
                android:textColor="#000"
                android:textSize="13sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/shichangjia"
                    android:text="市场价："
                    android:textColor="@color/fontGray"
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/item_free_shopping_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="￥89"
                    android:textColor="@color/fontGray"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_free_shopping_final_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="49"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/redOrange" />


                <TextView
                    android:id="@+id/item_free_shopping_sold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="2136件已售" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>