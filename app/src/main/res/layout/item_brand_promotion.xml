<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y463"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y382"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginTop="@dimen/y50"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="@dimen/x30"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/pict_url"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="4"
            android:scaleType="fitXY"
            android:src="@drawable/goods" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="南疏林地史蒂夫仍塞飞洛中仍佣兵夺天地茜"
                android:textColor="@color/fontBlack"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/discount_button"
                android:layout_alignParentLeft="true"
                android:paddingBottom="5dp"
                android:text="￥135.00"
                android:textColor="@color/redOrange"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/discount_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_goods_discount"
                    android:paddingBottom="1sp"
                    android:paddingLeft="3sp"
                    android:paddingRight="3sp"
                    android:paddingTop="1sp"
                    android:text="会员下单立减20"
                    android:textColor="@color/redOrange"
                    android:textSize="10sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="@dimen/x240"
                    android:layout_height="@dimen/y70"
                    android:background="@drawable/shape_goods_discount1"
                    android:gravity="center"
                    android:text="立即抢"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_weight="8"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_weight="7"
            android:background="@color/lineGray"/>
    </LinearLayout>
</LinearLayout>