<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_view"
    >

    <TextView
        android:id="@+id/date_time_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10sp"
        android:text="17/9/12 15:21:43"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginBottom="@dimen/y10"
        android:textColor="@color/fontGray"
        android:textSize="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="#FFF"
        android:orientation="vertical"
        android:paddingLeft="10sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5sp">

            <ImageView
                android:id="@+id/orange_dot_iv"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:src="@drawable/orange_dot" />

            <TextView
                android:id="@+id/order_status_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/orange_dot_iv"
                android:text=""
                android:maxLines="1"
                android:textColor="#fe6608"
                android:textSize="15sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginTop="5sp"
            android:layout_weight="2.70"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80sp"
                android:layout_weight="5"
                android:paddingRight="20sp">

                <TextView
                    android:id="@+id/content_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5sp"
                    android:layout_toRightOf="@id/sb"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="#454545"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10sp"
                    android:text="拼团失败原因:人数不足"
                    android:textColor="#c6c6c6"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/goods_url"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/y150"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/goods" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>