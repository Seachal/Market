<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <include android:id="@+id/store_name_layout"
        layout="@layout/item_shopcart_storename"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/enter_store_button"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y320">

        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="@dimen/x260"
            android:layout_height="@dimen/y260"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x40" />

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/goods_image"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x110"
            android:layout_toRightOf="@+id/goods_image"
            android:ellipsize="end"
            android:textStyle="bold"
            android:maxLines="2"
            android:text="不锈钢锅你值得拥有不锈钢锅你值得拥有不锈钢锅你值得拥有" />

        <TextView
            android:id="@+id/good_sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goods_name"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y30"
            android:layout_toRightOf="@+id/goods_image"
            android:text="一个装"
            android:textColor="@color/gray_good_spec"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/good_count"
            android:layout_toLeftOf="@+id/good_count"
            android:text="X"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/good_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x30"
            android:text="12"
            android:layout_above="@+id/good_price"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rmb_symbol"
            android:layout_alignBottom="@+id/good_price"
            android:layout_toLeftOf="@+id/good_price"
            android:textSize="15sp"
            android:layout_marginRight="5dp"
            android:textColor="@color/goods_info_sales"/>
        <TextView
            android:id="@+id/good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goods_image"
            android:layout_alignRight="@+id/good_count"
            android:text="333"
            android:textColor="@color/goods_info_sales"
            android:textSize="15sp" />
    </RelativeLayout>
