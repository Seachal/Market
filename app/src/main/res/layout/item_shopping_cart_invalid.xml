<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="138dp"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/ll_invalid_goods"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_invalid"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_marginRight="7dp"
            android:scaleType="fitXY"
            android:src="@drawable/goods_invalid"
            android:layout_gravity="center_vertical"
            />
        <FrameLayout
            android:layout_width="87dp"
            android:layout_height="87sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >
            <ImageView
                android:id="@+id/pict_url"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/goods" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:gravity="center"
                android:background="#22000000"
                android:textColor="#fff"
                android:text="宝贝已下架"
                />
        </FrameLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/sb"
                android:text="南疏林地史蒂夫仍塞飞洛中仍佣兵夺天地茜"
                android:textColor="#121212"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_goods_spec"
                android:layout_below="@+id/item_title"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一个装"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_invialid_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#ff3232"
            android:gravity="center"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/backgroundGray">
    </LinearLayout>
</LinearLayout>
