<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x60"
        android:paddingRight="@dimen/x30"
        android:paddingTop="@dimen/y60"
        android:paddingBottom="@dimen/y50">

        <ImageView
            android:id="@+id/item_popular_goodImg"
            android:layout_width="@dimen/x400"
            android:layout_height="@dimen/y400"
            android:scaleType="fitXY"
            android:src="@drawable/goods"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x60">

            <TextView
                android:id="@+id/item_popular_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="￥148..00"
                android:textColor="@color/theme_orange_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/item_popular_collectionNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_collection_star"
                android:drawablePadding="@dimen/x10"
                android:layout_above="@id/item_popular_price"
                android:layout_marginBottom="@dimen/y40"
                android:text="1232人收藏"
                android:textColor="@color/line_gray_color"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/item_popular_toBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="立即购"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_order_button_selected" />

            <TextView
                android:id="@+id/item_popular_goodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="沙漏办税等 DIY韩国送女友男朋友情特别生日礼物女生文艺创意闺蜜"
                android:textSize="14sp"
                android:textColor="@color/title_bar_title_color"
                android:layout_alignParentTop="true"
                android:layout_above="@id/item_popular_collectionNum"
                android:layout_marginBottom="@dimen/y20"
                android:ellipsize="end"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x520"
        android:background="@color/line_gray_color"/>

</LinearLayout>