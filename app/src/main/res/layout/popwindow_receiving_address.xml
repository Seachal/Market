<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        >
       <TextView
           android:layout_centerInParent="true"
           style="@style/popText"
           android:text="选择收货地址"
           />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="@color/lineGray"/>
    <LinearLayout
        android:id="@+id/select_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="20sp"
            android:layout_marginBottom="20sp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                >
                <TextView
                    android:id="@+id/consignee_name"
                    style="@style/popText"
                    android:text="某某"
                    />
                <TextView
                    style="@style/popText"
                    android:text=","
                    />
                <TextView
                    android:id="@+id/consignee_phone"
                    style="@style/popText"
                    android:text="17886936020"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/consignee_address"
                style="@style/popText"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="广东省深圳市宝安区是是是是是是是广东省深圳市宝安区是是是是是是是"
                android:maxLines="2"
                android:ellipsize="end"
                />
        </LinearLayout>
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="10sp"
            android:layout_height="12sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/right_img"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="@color/lineGray"/>
    <LinearLayout
        android:id="@+id/add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        >
        <TextView
            style="@style/popText"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:text="新增收货地址"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="10sp"
            android:layout_height="12sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/right_img"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_marginBottom="100sp"
        android:background="@color/lineGray"/>
    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/white"
        android:background="#fe6608"
        android:text="确定"
        />
</LinearLayout>