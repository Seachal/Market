<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar_bg_color"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:id="@+id/back"
                android:layout_width="@dimen/title_bar_height"
                android:layout_height="@dimen/y138"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="@dimen/title_bar_return"
                    android:layout_height="@dimen/title_bar_return"
                    android:src="@drawable/icon_return"
                    android:layout_centerInParent="true" />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/title_bar_title_color"
                android:textSize="18sp"
                android:text="选择收货地址"
                />
            <TextView
                android:id="@+id/manage_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_bar_title_color"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/x30"
                android:textSize="18sp"
                android:text="管理"
                />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#dadada" />
    </LinearLayout>
    <ListView
        android:layout_marginTop="@dimen/y140"
        android:id="@+id/address_list"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </ListView>

</FrameLayout>
