<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/title_bar"/>
    <com.dajukeji.hslz.view.NoScrollViewPager
        android:id="@+id/noscroll_subsidy"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </com.dajukeji.hslz.view.NoScrollViewPager>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#e3e3e3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y122"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/ll_today_subsidy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_today_subsidy"
                android:layout_width="@dimen/x45"
                android:layout_height="@dimen/y45"
                android:src="@drawable/freetab_btn_sel"
                />
            <TextView
                android:id="@+id/tv_today_subsidy"
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日补贴"
                android:textColor="#151515"
                />
        </LinearLayout>

        <View
            android:layout_width="1sp"
            android:layout_height="@dimen/y42"
            android:background="#e3e3e3" />
        <LinearLayout
            android:id="@+id/ll_my_subsidy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_my_subsidy"
                android:layout_width="@dimen/x45"
                android:layout_height="@dimen/y45"
                android:src="@drawable/subsidy_btn_nor"
                />

            <TextView
                android:id="@+id/tv_my_subsidy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:text="我的补贴"
                 />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
