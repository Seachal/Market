<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SetupLoginPwdActivity">

    <include
        android:id="@+id/titleBar"
        layout="@layout/title_bar"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="密码"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="#FFF"
        android:hint="6-16位字母或数字"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_phone"
        app:layout_constraintTop_toTopOf="@+id/tv_phone" />

    <TextView
        android:id="@+id/tv_msgCode"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="确认密码"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone" />

    <EditText
        android:id="@+id/edit_confirmPassword"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="#FFF"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_msgCode"
        app:layout_constraintTop_toTopOf="@+id/tv_msgCode" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/shape_r4_fcred"
        android:text="保存"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_msgCode" />

</android.support.constraint.ConstraintLayout>