<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DaiActivity">

    <RelativeLayout
        android:id="@id/title_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/white">

        <RelativeLayout
            android:id="@id/title_bar_return"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="@dimen/title_bar_return"
                android:layout_height="@dimen/title_bar_return"
                android:src="@drawable/icon_return"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <TextView
            android:id="@id/title_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y140"
            android:layout_marginRight="@dimen/y140"
            android:layout_centerInParent="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="我的代金券"
            android:textColor="@color/title_bar_title_color"
            android:textSize="@dimen/title_bar_text_size"/>

        <RelativeLayout
            android:id="@id/title_bar_notice"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="@dimen/title_bar_return"
                android:layout_height="@dimen/title_bar_return"
                android:src="@mipmap/help"
                android:layout_centerInParent="true"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/title_bar_right_rl"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/title_bar_right_iv"
                android:layout_width="@dimen/title_bar_return"
                android:layout_height="@dimen/title_bar_return"
                android:src="@drawable/icon_return"
                android:layout_centerInParent="true" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/title_bar_right_rl_tt"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/title_bar_right_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="@dimen/title_bar_text_size"/>

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/line_gray_color"/>
    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:background="@mipmap/bgggg"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代金券数量"
                    android:textSize="12dp"
                    android:layout_marginTop="31dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#80FFFFFF"
                    />
                <TextView
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text_mon"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="冻结数量"
                    android:textSize="12dp"
                    android:layout_marginTop="31dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#80FFFFFF"
                    />
                <TextView
                    android:id="@+id/free"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"

                >
                <LinearLayout
                    android:id="@+id/topuip"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="19dp"
                    android:src="@mipmap/topup"
                    />
                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"

                >
                <LinearLayout
                    android:id="@+id/money"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="19dp"
                        android:src="@mipmap/mon"
                        />
                    <TextView
                        android:layout_marginLeft="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="转账"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_free_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginTop="21dp"
        app:tabIndicatorColor="#FC494E"
        app:tabSelectedTextColor="#FC494E"
        app:tabTextColor="#000" />

    <android.support.v4.view.ViewPager
        android:id="@+id/discoverfragment_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>