<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y510"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y500"
        android:paddingTop="@dimen/y50"
        android:paddingBottom="@dimen/y50"
        android:paddingRight="@dimen/x50"
        android:paddingLeft="@dimen/x60"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/pict_url"
            android:layout_width="@dimen/x400"
            android:layout_height="@dimen/y400"
            android:layout_marginRight="@dimen/x60"
            android:scaleType="fitXY"
            android:src="@drawable/goods" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            >

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="南疏林地史蒂夫仍塞飞洛中仍佣兵夺天地茜"
                android:textColor="@color/fontBlack"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/final_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥135.00"
                    android:textColor="@color/redOrange"
                    android:textSize="19sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥988.00"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/x20"
                    android:textColor="#d0d0d0"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="1sp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="助力截止时间:"
                    android:textColor="@color/redOrange"
                    android:textSize="11sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/redOrange"
                    android:text="8月21日10:20"
                    android:textSize="11sp"
                    android:layout_marginLeft="5sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5sp"
                >
                <TextView
                    android:id="@+id/tv_get_subsidy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取补贴300元"
                    android:textSize="11sp"
                    android:textStyle="bold" />
                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_need_subsidy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还差352元"
                    android:textSize="11sp"
                    android:layout_marginLeft="5sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:background="@color/lineGray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/y20"
                android:paddingLeft="@dimen/x10"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/item_order_list_status_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:layout_alignParentRight="true" >

                    <!-- 继续分享 -->
                    <TextView
                        android:id="@+id/item_order_list_toShare"
                        android:layout_width="wrap_content"
                        android:paddingRight="@dimen/x15"
                        android:paddingLeft="@dimen/x15"
                        android:layout_height="@dimen/y60"
                        android:gravity="center"
                        android:background="@drawable/shape_goods_discount1"
                        android:text="继续分享"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <com.dajukeji.hslz.util.SuperpositionLayout
                    android:id="@+id/item_order_list_superpositionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y60"
                    app:superpositionWidth="@dimen/x15"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_toLeftOf="@id/item_order_list_status_linear" >
                </com.dajukeji.hslz.util.SuperpositionLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@color/backgroundGray"/>
    </LinearLayout>
</LinearLayout>