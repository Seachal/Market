<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/redOrange"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">
        <!--<ImageView-->
        <!--android:layout_width="@dimen/x180"-->
        <!--android:layout_height="@dimen/y80"-->
        <!--android:layout_marginLeft="10sp"-->
        <!--android:scaleType="fitXY"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:src="@drawable/no1"-->
        <!--android:layout_centerInParent="true"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="数字绿州"
                android:textSize="20sp"
        android:textStyle="normal"
        android:typeface="sans"/>
        <!--<TextView-->
        <!--android:id="@+id/message_tt"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:padding="@dimen/x20"-->
        <!--android:text="@string/text_user_message"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:textColor="@color/white"-->
        <!--android:gravity="center"/>-->
        <RelativeLayout
            android:id="@+id/title_bar_notice"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/message_tt"
                android:layout_width="@dimen/title_bar_return"
                android:layout_height="@dimen/title_bar_return"
                android:src="@drawable/white_message"
                android:layout_centerInParent="true"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/title_bar_notice_num"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:background="@drawable/discover_white_message"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </RelativeLayout>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_free_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:tabIndicatorColor="#fd6909"
        app:tabSelectedTextColor="#fd6909"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        app:tabTextColor="#000" />

    <android.support.v4.view.ViewPager
        android:id="@+id/discoverfragment_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
<RelativeLayout
    android:visibility="gone"
    android:id="@+id/reload_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/noconnect_icon"
        android:layout_width="@dimen/x378"
        android:layout_height="@dimen/y300"
        android:src="@drawable/no_connect"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_below="@+id/noconnect_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y50"
        android:id="@+id/noconnect_tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_failed"/>
    <Button
        android:id="@+id/reload_button"
        android:text="@string/reload"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/y100"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/noconnect_tt"
        android:background="@drawable/reload_button_bg"
        android:layout_width="@dimen/x330"
        android:layout_height="@dimen/x90" />
</RelativeLayout>
</FrameLayout>