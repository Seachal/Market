<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.dajukeji.hs.com.qianlihu.hxsz.MainActivity">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginBottom="@dimen/y30"
        android:background="#fff"
        android:gravity="center_vertical"
        >
        <RelativeLayout
            android:id="@id/title_bar_return"
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="@dimen/title_bar_return"
                android:layout_height="@dimen/title_bar_return"
                android:src="@drawable/icon_return"
                android:layout_centerInParent="true" />

        </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/shape_find_shop"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/find_coupon2"
                    />
                <EditText
                    android:id="@+id/shop_find_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:hint="@string/find_shop_input"
                    />
                <ImageView
                    android:id="@+id/clearImage"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:src="@drawable/clear"
                    />
            </LinearLayout>
        <TextView
            android:id="@+id/shop_to_find"
            android:layout_width="@dimen/x150"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/find_shop_detail"
            android:background="@drawable/selector_shop_text_tv"
            android:textSize="15sp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/fist_view"
            android:layout_width="fill_parent"
            android:layout_marginBottom="@dimen/y20"
            android:layout_height="1dp"
            android:background="#dadada" />
        <LinearLayout
            android:id="@+id/history_image"
            android:layout_below="@+id/fist_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/history"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_hot_detail_history"
                android:layout_marginLeft="10dp"
                android:textSize="15sp" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/clear_all"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/delete"/>
        </LinearLayout>
        <com.dajukeji.hslz.view.FlowLayout
            android:layout_marginTop="5dp"
            android:padding="20dp"
            android:layout_below="@+id/history_image"
            android:id="@+id/id_flowlayout_history"
            android:layout_width="fill_parent"
            android:background="#fff"
            android:layout_height="wrap_content" >
        </com.dajukeji.hslz.view.FlowLayout>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/second_view"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="1dp"
            android:background="#dadada" />
        <LinearLayout
            android:id="@+id/hot_image"
            android:layout_below="@+id/second_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/hot"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_hot_detail"
                android:layout_marginLeft="10dp"
                android:textSize="15sp" />
        </LinearLayout>
        <!--<ImageView
            android:id="@+id/hot_image"
            android:layout_width="15dp"
            android:layout_height="17dp"
            android:src="@drawable/hot"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_hot_detail"
            android:layout_toRightOf="@+id/hot_image"
            android:layout_alignBottom="@+id/hot_image"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:layout_alignTop="@+id/hot_image" />-->
        <com.dajukeji.hslz.view.FlowLayout
            android:layout_marginTop="5dp"
            android:padding="20dp"
            android:layout_below="@+id/hot_image"
            android:id="@+id/id_flowlayout"
            android:layout_width="fill_parent"
            android:background="#fff"
            android:layout_height="wrap_content" >
        </com.dajukeji.hslz.view.FlowLayout>
    </RelativeLayout>

</LinearLayout>
