<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_order_list_img"
            android:layout_width="@dimen/x260"
            android:layout_height="@dimen/y260"
            android:scaleType="fitXY"
            android:src="@drawable/goods" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_order_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="商品简介"
                android:textColor="#191919" />

            <TextView
                android:id="@+id/item_order_list_good_sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_good_spec"
                android:layout_marginTop="@dimen/y50"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="颜色:一个装" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_order_list_present_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="0.00"
                android:textColor="#191919"
                android:textSize="14sp"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/item_order_list_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_good_spec"
                android:layout_marginTop="3sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="￥26"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:text="*1"
                android:textSize="14sp"
                android:textColor="@color/gray_good_spec" />

            <TextView
                android:id="@+id/tv_can_refundable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:background="@drawable/shape_share_shop"
                android:paddingBottom="@dimen/y10"
                android:paddingTop="@dimen/y10"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:textColor="@color/order_info"
                android:text="申请售后"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="@color/white"
        />
</LinearLayout>