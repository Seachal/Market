<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5sp"
        android:paddingRight="5sp">

        <LinearLayout
            android:id="@+id/goods_detail_share_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="5sp">

            <ImageView
                android:id="@+id/share_image"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/index_page" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_image"
                android:layout_marginTop="2sp"
                android:text="首页"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goods_detail_collection_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/collectiontab_btn_nor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:text="收藏"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goods_detail_mixpool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5sp">

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/customer_service" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:text="客服"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/add_to_shopcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="#fe6608"
        android:gravity="center"
        android:padding="15dp"
        android:text="加入购物车"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/sure_buy"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:background="#fc3a2f"
        android:gravity="center"
        android:padding="15dp"
        android:text="立即购买"
        android:textColor="@color/white" />

    <TextView
        android:visibility="gone"
        android:id="@+id/sale_by_auction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:background="@color/orange"
        android:text="立即拍购"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="15dp"/>

</LinearLayout>