<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/y850"
    android:background="#f7f7f7"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_catGood_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y534"
            android:scaleType="fitXY"
            android:src="@drawable/goods" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/y20"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x30"
            android:paddingTop="@dimen/y8">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_coupon_type"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/y40"
                    android:layout_marginTop="@dimen/y9"
                    android:layout_marginRight="@dimen/x20"
                    android:src="@drawable/taobao1"
                    />
                <TextView
                    android:id="@+id/item_catGood_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="     2017秋装新款宽松两领碎装新款秋装新款宽松两件套连"
                    android:textColor="#343434"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/exchange_reason"
                    android:textSize="12sp"
                    android:text="已售100件"
                    />
                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/item_catGood_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="￥328"
                    android:textColor="@color/exchange_reason"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y15"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="@dimen/x230"
                    android:layout_height="@dimen/y50"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/x60"
                        android:layout_height="match_parent"
                        android:background="@color/redOrange"
                        android:gravity="center"
                        android:text="券"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/item_catGood_cut_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="￥100"
                        android:textColor="@color/redOrange"
                        android:background="@drawable/bg_cat_coupon_stroke"
                        android:textSize="12sp" />
                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/item_catGood_present_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥328.00"
                    android:textColor="@color/redOrange"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>