<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f7f7f7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/y20">

        <ImageView
            android:id="@+id/good_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y534"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/goods" />

        <LinearLayout
            android:id="@+id/ll_good_name_tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/good_img"
            android:layout_marginTop="@dimen/y10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/good_name_tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/goods_name_color"
                android:textSize="12sp"
                tools:text="一个商品巴拉博吧" />

            <ImageView
                android:id="@+id/good_zonetype_img"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y100"
                android:layout_marginLeft="@dimen/x20" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_good_name_tt"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/brand_item_good_dis_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_stroke_orange_line"
                android:gravity="center"
                android:paddingLeft="@dimen/x18"
                android:paddingTop="@dimen/y5"
                android:paddingRight="@dimen/x18"
                android:paddingBottom="@dimen/y5"
                android:textColor="@color/orange"
                android:textSize="8sp"
                tools:visibility="visible"
                android:visibility="gone" />

            <TextView
                android:text="市场价"
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#666" />

            <TextView
                android:id="@+id/good_pre_price"
                android:layout_marginLeft="2dp"
                tools:text="￥100"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x14"
                android:textSize="11sp"
                android:lineSpacingExtra="0dp"
                android:text="券"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/good_current_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginRight="@dimen/x20"
                android:textColor="@color/orange" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
