<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="#36000000">

    <RelativeLayout
        android:layout_width="@dimen/x775"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="@dimen/x740"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x35"
            android:layout_marginTop="@dimen/y35"
            android:background="@drawable/corner_white_bg"
            android:paddingTop="@dimen/y60"
            android:paddingBottom="@dimen/y60"
            android:orientation="vertical">
            <TextView
                android:id="@+id/order_master_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#343434"
                android:text="参与papi酱的拼单"/>

            <TextView
                android:id="@+id/order_status_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="仅剩1个名额，21:35:33后结束"
                android:gravity="center"
                android:textColor="@color/gray"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/y50"
                android:layout_width="@dimen/x300"
                android:layout_height="@dimen/y100"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/order_master_iv"
                    android:layout_alignParentLeft="true"
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/y100"
                    android:background="@drawable/avatar"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/y100"
                    android:background="@drawable/unknown"/>
            </RelativeLayout>
            
            <TextView
                android:id="@+id/go_group_buy"
                android:background="@drawable/fillet_red_button"
                android:layout_width="@dimen/x300"
                android:layout_height="@dimen/x60"
                android:layout_marginTop="@dimen/y50"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="参与拼单"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/shut_down_iv"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/y70"
            android:src="@drawable/shut_down"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>
</RelativeLayout>