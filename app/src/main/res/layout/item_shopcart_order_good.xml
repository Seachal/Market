<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y330"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"/>

    <LinearLayout
        android:id="@+id/item_good"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/good_img"
            android:layout_width="@dimen/x260"
            android:layout_height="@dimen/y260"
            android:layout_marginLeft="@dimen/x40"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y260"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x40">

            <TextView
                android:id="@+id/good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x70"
                android:maxLines="2"
                android:textSize="14sp"
                android:ellipsize="end"
                android:text="梅赛德斯奔驰s500耀世4matic版本hybrid混动型＆奥迪A8 45tfsi 机械增压4quatrue"/>

            <TextView
                android:id="@+id/good_sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_good_spec"
                android:text="一个装"
                android:layout_below="@+id/good_name"
                android:layout_marginTop="@dimen/y25"/>
            <TextView
                android:id="@+id/good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="24.12"
                android:textSize="16sp"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginBottom="@dimen/y40"
                android:textColor="@color/title_black_color"
                />
            <TextView
                android:id="@+id/rmb_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/good_price"
                android:layout_alignParentBottom="true"
                android:text="@string/rmb_symbol"
                android:textSize="16sp"
                android:layout_alignTop="@+id/good_price"
                android:textColor="@color/goods_info_sales" />
            <TextView
                android:id="@+id/good_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/good_sku"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:text="x1"
                android:layout_above="@+id/good_price"
                android:layout_marginBottom="@dimen/y10"
                android:textColor="@color/exchange_option"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>