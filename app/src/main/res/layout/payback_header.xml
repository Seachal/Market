<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y290"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/order_money"
        android:layout_marginTop="@dimen/y70"
        android:layout_toLeftOf="@+id/order_money"
        android:text="@string/rmb_symbol"
        android:textSize="13sp"
        android:textColor="@color/orange" />

    <TextView
        android:id="@+id/order_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y70"
        android:maxLines="1"
        android:text="1520"
        android:textSize="13sp"
        android:textColor="@color/orange" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/see_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/y50"
            android:paddingTop="@dimen/y50"
            android:text="查看订单"
            android:textColor="@color/title_black_color"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="13sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_line"
            android:layout_marginTop="@dimen/y50"
            android:layout_marginBottom="@dimen/y50"/>
        <TextView
            android:id="@+id/return_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/y50"
            android:paddingBottom="@dimen/y50"
            android:text="返回首页"
            android:textColor="@color/title_black_color"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="13sp"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>