<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dajukeji.hs.com.qianlihu.hxsz.activity.mine.refund.ApplyAfterSaleActivity">

    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- ScrollView中第一层 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <!-- 顶部退换货状态 -->
                <LinearLayout
                    android:id="@+id/apply_afterSale_topStatus"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y226"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/title_bar_bg_color">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/y20"
                    android:paddingBottom="@dimen/y20"
                    android:paddingLeft="@dimen/x30"
                    android:paddingRight="@dimen/x30"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/item_order_list_img"
                        android:layout_width="@dimen/x260"
                        android:layout_height="@dimen/y260"
                        android:scaleType="fitXY"
                        android:background="@drawable/goods"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y260"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginRight="@dimen/x30">

                        <TextView
                            android:id="@+id/item_order_list_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:text="加厚不锈钢加厚不锈钢"
                            android:textSize="13sp"
                            android:textColor="@color/tabUnselected"/>

                        <TextView
                            android:id="@+id/item_order_list_good_sku"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y25"
                            android:text="颜色 ：黑色"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="13sp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item_order_list_price_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_order_list_present_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="￥29.60"
                            android:textColor="@color/tabUnselected"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/tv_goods_count"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:gravity="bottom"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="@color/exchange_option"
                            android:layout_gravity="right"
                            android:text="*1"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/x30"
                    android:paddingRight="@dimen/x30"
                    android:paddingBottom="@dimen/y30">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/x5"
                        android:layout_marginTop="@dimen/y50">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="退款状态"
                            android:textSize="16sp"
                            android:textColor="@color/exchange_option"
                            android:drawableLeft="@drawable/icon_exchange_apply_asterisk"
                            android:drawablePadding="@dimen/x20"/>

                        <TextView
                            android:id="@+id/apply_after_sale_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x313"
                            android:layout_centerVertical="true"
                            android:text="*"
                            android:textSize="16sp"
                            android:textColor="@color/exchange_reason"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/x5"
                        android:layout_marginTop="@dimen/y50">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="申请服务"
                            android:textSize="16sp"
                            android:textColor="@color/exchange_option"
                            android:drawableLeft="@drawable/icon_exchange_apply_asterisk"
                            android:drawablePadding="@dimen/x20"/>

                        <TextView
                            android:id="@+id/apply_after_sale_service"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x313"
                            android:layout_centerVertical="true"
                            android:text="*"
                            android:textSize="16sp"
                            android:textColor="@color/exchange_reason"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/x5"
                        android:layout_marginTop="@dimen/y50">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="申请理由"
                            android:textSize="16sp"
                            android:textColor="@color/exchange_option"
                            android:drawableLeft="@drawable/icon_exchange_apply_asterisk"
                            android:drawablePadding="@dimen/x20"/>

                        <TextView
                            android:id="@+id/apply_after_sale_reason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x313"
                            android:layout_centerVertical="true"
                            android:text="*"
                            android:textSize="16sp"
                            android:textColor="@color/exchange_reason"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/x5"
                        android:layout_marginTop="@dimen/y50">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="退款金额"
                            android:textSize="16sp"
                            android:textColor="@color/exchange_option"
                            android:drawableLeft="@drawable/icon_exchange_apply_asterisk"
                            android:drawablePadding="@dimen/x20"/>

                        <TextView
                            android:id="@+id/apply_after_sale_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x313"
                            android:layout_centerVertical="true"
                            android:text="￥"
                            android:textSize="16sp"
                            android:textColor="@color/theme_orange_color"
                            />

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="@dimen/x30"
                        android:paddingTop="@dimen/y60">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退货说明:"
                            android:textColor="@color/exchange_option"
                            android:drawablePadding="@dimen/x20" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y30"
                        android:text="以下优惠不予以退还"
                        android:textSize="14sp"
                        android:textColor="@color/title_black_color"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/line_gray_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/x30" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠券折扣"
                            android:textSize="14sp"
                            android:textColor="@color/title_black_color"/>

                        <TextView
                            android:id="@+id/tv_one_deduct_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-￥0"
                            android:textSize="14sp"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/title_black_color" />

                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#EEEEEE"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
