<resources>

    <!-- base application theme. -->
    <!-- 为 Theme 设置透明属性 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/redOrange</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/themeColor</item>
    </style>

    <style name="walletFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="launchTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="MyTabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <!--        <item name="android:paddingBottom">3dp</item>-->
        <item name="android:textColor">@drawable/btn_tab_text_selector</item>
    </style>

    <style name="ShopOther">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <!--<item name="android:padding">6dp</item>-->
        <item name="android:drawableBottom">@drawable/seletor_order_title_bottom</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">3dp</item>
        <!--        <item name="android:paddingBottom">3dp</item>-->
        <item name="android:textColor">@drawable/btn_shop_text_selector</item>
    </style>

    <style name="shareText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/shape_share_shop</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoBluck">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="startPage" parent="Theme.AppCompat">
            <!--<item name="android:windowBackground">@drawable/start_page</item>-->

            <item name="android:windowNoTitle">true</item>
            <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="discount">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorEmpty</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="customCheckBox">
        <item name="android:button">@drawable/selector_shopcart_checkbox</item>
    </style>
    <style name="discountText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#494949</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="poster">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:textColor">#494949</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="popText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#343434</item>
    </style>

    <style name="meTextFirst">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="meTextTwo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/title_black_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">@dimen/y20</item>
    </style>

    <style name="meLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingBottom">13sp</item>
        <item name="android:paddingTop">13sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="popWindow_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_up_in</item>
        <item name="android:windowExitAnimation">@anim/pop_down_out</item>
    </style>


    <!-- 无动画Dialog -->
    <style name="CommonDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 从底部进出动画 -->
    <style name="BottomDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_out</item>
    </style>

    <style name="loadingDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="RushBuyCountDownTimerViewStyle" parent="SnapUpView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">0</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RushBuyCountDownTimerViewStyleRed" parent="RushBuyCountDownTimerViewStyle">
        <item name="android:textColor">#fff</item>
    </style>


    <style name="SnapUpViewColon" parent="SnapUpView">
        <item name="android:textColor">#fff</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">:</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SnapUpView">
        <!--//改变控件大小-->
        <item name="android:textSize">20sp</item>
    </style>
    <style name="customBlackProgressBar" parent="android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_black</item>
    </style>

    <!--默认Dialog(无标题、无边框、无内容背景色)-->
    <style name="DefaultDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- dialog内容边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- dialog内容背景颜色,如果不设置会导致Dialog边框仍然存在; 即背景@drawable/abc_dialog_material_background -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 下层的屏幕黑色半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 点击外部消失 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>
